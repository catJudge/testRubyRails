<div class="container">
  <div class="row">
    <div class="col-md-5">

      <h1>Editing Blog</h1>

      <%= form_for :blog, url: blog_path(@blog), method: :patch do |f| %>

          <% if @blog.errors.any? %>
              <div id="error_explanation">
                <h2>
                  <%= pluralize(@blog.errors.count, "error") %> prohibited
                  this article from being saved:
                </h2>
                <ul>
                  <% @blog.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>

          <div class="form-group">
            <%= f.label :title %><br>
            <%= f.text_field :title, :autofocus => true, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :text %><br>
            <%= f.text_area :text, :autofocus => true, class: 'form-control' %>
          </div>
          <p>
            <%= f.submit :class => 'btn btn-default' %>
          </p>

      <% end %>

      <%= link_to 'Back', blogs_path, :class => 'btn btn-default' %>
    </div>
  </div>
</div>