<h1>All blogs</h1>

<%= link_to 'New blog', new_blog_path , :class => 'btn btn-default'%>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>

  <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.text %></td>
        <td><%= link_to 'Show', blog_path(blog) , :class => 'btn btn-default'%></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) , :class => 'btn btn-default'%></td>
        <td><%= link_to 'Destroy', blog_path(blog),
                        method: :delete,
                        data: {confirm: 'Are you sure?'} , :class => 'btn btn-default'%></td>
      </tr>
  <% end %>
</table>