<div class="container">
  <div class="panel panel-default">
    <div class="panel-body">
      <h1><%= @blog.title %></h1>
      <p>
        <%= @blog.text %>
      </p>
    </div>
  </div>

  <% if current_user %>
      <% if current_user.is_admin? %>
          <%= link_to 'Edit', edit_blog_path(@blog), :class => 'btn btn-default' %>
      <% end %>
  <% end %>
  <%= link_to 'Back', blogs_path, :class => 'btn btn-default' %>
</div>
<div class="container">
  <h3>Add a post:</h3>
  <%= render 'posts/form' %>
</div>

<div class="container">
  <h3>Posts</h3>
  <%= render @blog.posts %>
</div>
