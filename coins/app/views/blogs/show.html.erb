<div class="container">
  <div class="row">
    <div class="col-md-5">

      <div class="panel panel-default">
        <div class="panel-body">
          <h1><%= @blog.title %></h1>
          <p>
            <%= @blog.text %>
          </p>
        </div>
      </div>

      <% if current_user %>
          <% if current_user.is_admin? %>
              <%= link_to 'Edit', edit_blog_path(@blog), :class => 'btn btn-default' %>
          <% end %>
      <% end %>

      <%= link_to 'Back', blogs_path, :class => 'btn btn-default' %>

      <% if current_user %>
          <h3>Add a post:</h3>
          <%= render 'posts/form' %>
      <% end %>


      <h3>Posts</h3>
      <%= render @blog.posts %>
    </div>
  </div>
</div>
